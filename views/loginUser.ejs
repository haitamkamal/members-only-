<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
  <title>User</title>
  <style>
    /* Sidebar Styling */
    .sidebar {
      position: fixed;
      top: 0;
      left: -250px; /* Start hidden */
      width: 250px;
      height: 100vh;
      background: #363636;
      color: white;
      padding: 20px;
      transition: left 0.4s ease-in-out; /* Smooth animation */
    }

    .sidebar.active {
      left: 0; /* Show sidebar */
    }

    /* Center Content */
    .content {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100%;
      transition: margin-left 0.4s ease-in-out; /* Smooth shift when sidebar opens */
    }

    /* Shift content when sidebar is active */
    .content.shifted {
      margin-left: 250px;
    }

    /* Button Style */
    #btnSidebar {
      position: fixed;
      top: 20px;
      left: 20px;
      background: #00d1b2;
      color: white;
      border: none;
      padding: 10px 15px;
      cursor: pointer;
      z-index: 10;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
     <br><br><br>
      <button><a href="/login-User" class="has-text-white">Home</a></button><br><br>
      <button><a href="/Create-new-Post" class="has-text-white">Create Message</a></button><br><br>
      <button><a href="/view-post/messages" class="has-text-white">View Messages</a></button><br><br>
      <button class="button is-danger"><a href="/log-out" class="has-text-white">Log out</a></button><br>
    
  </aside>

  <!-- Button to toggle sidebar -->
  <button id="btnSidebar" onclick="toggleSidebar()">â˜° Menu</button>
  <!-- Main Content -->
  <div class="content has-background-white-ter	" id="mainContent ">
    <div class="box has-text-centered has-background-grey-light	">
      <% if (locals.user) { %>
        <h1 class="title">Hello, <%= user.first_name %> <%= user.last_name %> </h1>
        <p class="subtitle">Explore the latest anonymous posts from our community</p>
      <% } %>

      <button class="button is-dark"><a href="/Create-new-Post" class="has-text-white">Create new post</a></button>
      <button class="button is-dark"><a href="/view-post/Messages" class="has-text-white">View Posts</a></button>
    </div>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const content = document.getElementById('mainContent');

      sidebar.classList.toggle('active');
      content.classList.toggle('shifted');
    }
  </script>

</body>
</html>
